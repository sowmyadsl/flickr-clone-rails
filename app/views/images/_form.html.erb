<%= render "layouts/errors", :object => @image %>

<%= form_for @image, url: get_image_url(@image), html: { multipart: true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description, class: 'btn', onclick: "click_me(#{@image.id})" %>
  <%= f.text_field :description, class: 'desc'%>
  <br>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <br>
  <%= f.submit class: 'btn' %>
<% end %>
