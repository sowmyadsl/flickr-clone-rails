<%= render "layouts/errors", :object => @user %>

<%= form_for @user, url: users_path, html: { multipart: true } do |f| %>
  <%= f.label "User Name" %>
  <%= f.text_field :name %>
  <%= f.label "bio" %>
  <%= f.text_area :bio %>
  <%= f.label "avatar" %>
  <%= f.file_field :avatar %>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign Up" %>
<% end %>
