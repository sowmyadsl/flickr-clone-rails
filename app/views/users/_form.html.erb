<%= render "layouts/errors", :object => @user %>

<%= form_for @user, url: get_user_url(@user), html: { multipart: true } do |f| %>
  <%= f.label "User Name" %>
  <%= f.text_field :name %>
  <br>
  <%= f.label "bio" %>
  <%= f.text_area :bio %>
  <br>
  <%= f.label "avatar" %>
  <%= f.file_field :avatar %>
  <br>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <br>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit %>
<% end %>
